---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "About Me";

const identity = {
  firstName: "Christine",
  country: "Earth",
  occupation: "Software Engineer",
};
---

<BaseLayout pageTitle={pageTitle}>
  <p class="text_color">
    My name is {identity.firstName}. I'm a {identity.occupation}.
  </p>
</BaseLayout>

<style>
  .page__actions {
    @apply flex justify-center md:justify-end py-6;
  }
  .text_color {
    @apply text-base text-gray-500 dark:text-gray-400;
  }
</style>
